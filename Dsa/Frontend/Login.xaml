<Window x:Class="Frontend.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="500">

    <Window.Resources>
        <ResourceDictionary Source="/Styles/Styles.xaml"/>
    </Window.Resources>

    <StackPanel VerticalAlignment="Center">
        <Label HorizontalAlignment="Center" FontSize="18">User Name:</Label>
        <TextBox x:Name="UserName" Width="200" Height="25"></TextBox>
        <Label HorizontalAlignment="Center" FontSize="18">Wallet Address:</Label>
        <TextBox x:Name="Wallet" Width="200" Height="25"></TextBox>
        <Label HorizontalAlignment="Center" FontSize="18">Private Key:</Label>
        <TextBox x:Name="PK" Width="200" Height="25"></TextBox>
        <Button Style="{StaticResource Button}" VerticalAlignment="Top" Margin="20" Content="Login"/>
    </StackPanel>
</Window>
