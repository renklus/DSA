<Page x:Class="Frontend.Views.Queue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontend.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="Queue">

    <Page.Resources>
        <ResourceDictionary Source="/Styles/Styles.xaml"/>
    </Page.Resources>

    <StackPanel>
        <Label HorizontalContentAlignment="Center">Partner address:</Label>
        <TextBox Name="PartnerAddress" Height="30" Width="200" Margin="10"></TextBox>
        <Button Style="{StaticResource Button}" VerticalAlignment="Center" Content="Start a Game" Click="Button_Click" Name="StartGameButton"/>
        <Label HorizontalContentAlignment="Center">Join by GameID:</Label>
        <TextBox Name="GameId" Height="30" Width="200" Margin="10"></TextBox>
        <Button Style="{StaticResource Button}" VerticalAlignment="Center" Content="Join Game" Click="Button_Click2" Name="JoinGameButton"/>
    </StackPanel>
</Page>
