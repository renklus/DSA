<Page x:Class="Frontend.Views.Chat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontend.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chat">

    <StackPanel Orientation="Vertical">
        <TextBlock Text="Chat"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Erhaltene Nachricht: " Width="200"/>
            <Label Content="---" x:Name="ReceivedMessage" Width="440" />
            <Button Margin="20,0" Name="RefreshMessages" Content="Nachrichten aktualisieren" Click="RefreshMessages_Click"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox Name="Message" Width="500"></TextBox>
            <Button Margin="20,0" Name="SendMessage" Content="Nachricht Senden" Click="SendMessage_Click"></Button>
        </StackPanel>
    </StackPanel>
</Page>
